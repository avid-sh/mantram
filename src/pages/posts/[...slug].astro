---
import Hanzi from "@/components/hanzi.astro";
import { parseMantramText } from "@/lib/parser";
import { getPostsCollectionByPriority } from "@/lib/posts";
import MantramPostLayout from "../_post-layout.astro";

export async function getStaticPaths() {
  const entries = await getPostsCollectionByPriority();
  return entries.map((entry, index) => ({
    params: { slug: entry.slug },
    props: {
      entry,
      prev:
        index > 0
          ? {
              position: entries[index - 1].position,
              title: entries[index - 1].data.title,
              sub: entries[index - 1].data.subtitle,
              slug: entries[index - 1].slug,
            }
          : undefined,
      next:
        index < entries.length - 1
          ? {
              position: entries[index + 1].position,
              title: entries[index + 1].data.title,
              sub: entries[index + 1].data.subtitle,
              slug: entries[index + 1].slug,
            }
          : undefined,
    },
  }));
}

const { entry, prev, next } = Astro.props;
const chars = parseMantramText(entry.body.trim());
---

<MantramPostLayout
  frontmatter={entry.data}
  position={entry.position}
  prev={prev}
  next={next}
>
  {
    chars.map((char) =>
      char.type === "linebr" ? (
        <div class="flex h-3 w-full" />
      ) : (
        <Hanzi {...char} />
      ),
    )
  }
</MantramPostLayout>
