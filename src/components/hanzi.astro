---
type Props = {
  type: "hanzi" | "punc";
  char: string;
  sub?: string;
  pinyin?: string;
};

const { type, char, sub, pinyin } = Astro.props;
---

{
  type === "hanzi" ? (
    <div class="flex flex-col items-center text-lg">
      <span>{pinyin || sub}</span>
      <span class="-my-0.5 text-muted-foreground">{char}</span>
      {!!pinyin && <span>{sub}</span>}
    </div>
  ) : (
    <div class="-mr-1 flex flex-col items-center justify-center text-lg">
      <span>{char}</span>
    </div>
  )
}
