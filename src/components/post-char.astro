---
import type { Character } from "mantram-parser";

type Props = {
  char: Character;
};

const { char } = Astro.props;
---

{
  char.type === "hanzi" && (
    <div class="flex flex-col items-center text-lg">
      <span>{char.sub}</span>
      <span class="-my-0.5 text-muted-foreground">{char.char}</span>
    </div>
  )
}

{
  char.type === "punc" && (
    <div class="flex flex-col items-center justify-center text-lg text-muted-foreground">
      <span>{char.char}</span>
    </div>
  )
}

{
  char.type === "context" && (
    <div class="flex flex-col items-center justify-center text-lg">
      <span>{char.content}</span>
    </div>
  )
}

{char.type === "linebreak" && <div class="flex h-1 w-full" />}
