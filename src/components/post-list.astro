---
import { getPostsCollectionByPriority } from "@/lib/posts";

const allPosts = await getPostsCollectionByPriority();
---

<p class="mb-3 self-end text-sm text-muted-foreground">
  Total: {allPosts.length} post{allPosts.length === 1 ? "" : "s"}
</p>
<ul class="flex flex-col gap-3 md:grid md:grid-cols-2">
  {
    allPosts.map((post) => (
      <li>
        <a href={`/posts/${post.slug}`}>
          <div class="flex h-full rounded-lg border bg-card p-4 text-card-foreground shadow-sm hover:bg-accent hover:text-accent-foreground md:px-5">
            <span class="mr-4 self-center">{post.position}.</span>
            <div class="flex flex-1 flex-col justify-center gap-0.5">
              {!!post.data.titlePinyin && (
                <span class="text-xs md:text-sm">{post.data.titlePinyin}</span>
              )}
              <span class="text-muted-foreground md:text-lg">
                {post.data.title}
              </span>
              <span class="text-sm md:text-base">{post.data.subtitle}</span>
            </div>
          </div>
        </a>
      </li>
    ))
  }
</ul>
